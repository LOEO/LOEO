<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leo.dao.RoleDao">
    <insert id="insert">
        insert into t_sys_role (name,code,descp,createUser,createDt,updateUser,updateDt,enable)
        values(#{name},#{code},#{descp},#{createUser},#{createDt},#{updateUser},#{updateDt},#{enable})
    </insert>

    <update id="update">
        update t_sys_role set
            name=#{name},
            code=#{code},
            descp=#{descp},
            createUser=#{createUser},
            createDt=#{createDt},
            updateUser=#{updateUser},
            updateDt=#{updateDt},
            enable=#{enable}
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete from t_sys_role where id=#{id}
    </delete>

    <select id="getByPage" resultType="com.leo.entity.SysRole">
        select * from t_sys_role
        <where>
            <if test="name!=null and name!=''">
                name=#{name}
            </if>
        </where>
    </select>
    <select id="getUserHasRoles" resultType="com.leo.entity.SysRole">
      select r.* from t_sys_role r join t_sys_user_role ur on r.id=ur.roleId and ur.userId=#{userId};
    </select>
    <select id="getUserNotHasRoles" resultType="com.leo.entity.SysRole">
      select r.* from t_sys_role r where r.id not in (select roleId from t_sys_user_role where userId=#{userId});
    </select>

</mapper>